.mail-item__subject-background {
    width: 100%;
    height: 100%;
    justify-content: center;
    align-items: flex-start;
    padding-left: 0;
    position: absolute;
    left: 3%;
    background-image: none;
    padding-right: 0;
    padding-top: 0;
    padding-bottom: 0;
    display: flex;
}

.mail-item__text {
    width: 65%;
    height: 73%;
    position: absolute;
    left: 33%;
    top: 8%;
    white-space: nowrap;
    max-width: 65%;
    min-width: 65%;
}

.mail-item__subject {
    font-size: 40px;
    white-space: nowrap;
    max-width: 100%;
    width: 100%;
    -unity-font-style: normal;
     height: 56%;
    color: rgb(114, 76, 32);
    flex-wrap: nowrap;
    min-width: 100%;
    position: relative;
}

.mail-item__date {
    -unity-font-style: normal;
    font-size: 35px;
    top: -11px;
    margin-left: 0;
    margin-right: 0;
    margin-top: 0;
    margin-bottom: 0;
    padding-left: 0;
    padding-right: 0;
    padding-top: 0;
    padding-bottom: 0;
    color: rgb(157, 134, 99);
    width: 100%;
    max-width: 100%;
    min-width: 100%;
}

.mail-item__badge {
    background-color: rgba(231, 76, 60, 0);
    width: 60px;
    height: 60px;
    position: absolute;
    right: -1%;
    top: -3px;
    background-image: url('project://database/Assets/UI/Textures/UI_atlas.psd?fileID=-8704856717424279939&guid=68de98d899585b7469e0fb40a0fcbc56&type=3#icon_notification');
    -unity-background-scale-mode: scale-to-fit;
}

.mail-item-icon-background {
    height: 100%;
    width: 30%;
    justify-content: center;
    align-items: flex-end;
}

.mail-item__new {
    position: relative;
    height: 100px;
    width: 100px;
    right: 0;
    display: flex;
    -unity-background-scale-mode: scale-to-fit;
}
