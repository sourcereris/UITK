.background__container {
    flex-grow: 1;
    width: 100%;
    height: 100%;
    position: absolute;
    justify-content: center;
    display: flex;
}

.background__letterbox-top {
    flex-grow: 0;
    display: flex;
    width: 100%;
    height: 33%;
    flex-shrink: 0;
    background-color: rgb(0, 32, 55);
    top: 0;
    position: absolute;
}

.background__letterbox-bottom {
    flex-grow: 0;
    display: flex;
    width: 100%;
    height: 33%;
    flex-shrink: 0;
    background-color: rgb(0, 32, 55);
    bottom: -34%;
    -unity-background-image-tint-color: rgb(111, 111, 111);
}

.background__graphic {
    position: absolute;
    width: 100%;
    height: 39%;
    border-left-color: rgba(0, 0, 0, 0);
    border-right-color: rgba(0, 0, 0, 0);
    border-top-color: rgba(0, 0, 0, 0);
    border-bottom-color: rgba(0, 0, 0, 0);
    cursor: url("project://database/Assets/UI/Textures/Cursors/Cursor_A.png?fileID=2800000&guid=0fc53ad8e877049c3aef54a3f8a1e01a&type=3#Cursor_A");
}

.info__container {
    width: 100%;
    align-items: center;
    height: 6%;
}

.pause__button-container {
    top: 26%;
    right: 0;
    width: 100px;
    height: 100px;
    position: absolute;
    margin-left: 12px;
    margin-right: 12px;
    margin-top: 12px;
    margin-bottom: 12px;
}

.game-char__container {
    position: absolute;
    left: 0;
    bottom: 15%;
    width: 99%;
    height: 16%;
    background-color: rgba(44, 62, 80, 0);
    flex-direction: row;
    padding-left: 0;
    padding-right: 0;
    padding-top: 0;
    padding-bottom: 0;
    margin-left: 0;
    margin-right: 0;
    margin-top: 0;
    margin-bottom: 0;
    align-items: center;
    opacity: 0.91;
}

.pause__template-container {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    opacity: 1;
    display: none;
}

.game-win__template-container {
    display: none;
}

.game-lose__template-container {
    display: none;
}

.healing-potion__container {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
}

.healing-potion__slot {
    width: 24%;
    height: 11%;
    background-color: rgba(255, 0, 0, 0.26);
    border-left-width: 3px;
    border-right-width: 3px;
    border-top-width: 3px;
    border-bottom-width: 3px;
    border-left-color: rgb(255, 255, 255);
    border-right-color: rgb(255, 255, 255);
    border-top-color: rgb(255, 255, 255);
    border-bottom-color: rgb(255, 255, 255);
}

.healing-potion__slot-1 {
    background-color: rgb(152, 36, 36);
    cursor: url("project://database/Assets/UI/Textures/Cursors/Cursor_B.png?fileID=2800000&guid=f3c815d95da3a483385620d7bd8fc545&type=3#Cursor_B");
    position: absolute;
}

.healing-potion__slot-2 {
    position: absolute;
    background-color: rgb(0, 28, 255);
    cursor: url("project://database/Assets/UI/Textures/Cursors/Cursor_B.png?fileID=2800000&guid=f3c815d95da3a483385620d7bd8fc545&type=3#Cursor_B");
}

.healing-potion__slot-3 {
    position: absolute;
    background-color: rgba(8, 255, 28, 0.85);
    cursor: url("project://database/Assets/UI/Textures/Cursors/Cursor_B.png?fileID=2800000&guid=f3c815d95da3a483385620d7bd8fc545&type=3#Cursor_B");
}

.enemy__container {
    height: 1%;
    width: 5%;
    position: absolute;
    display: flex;
    align-items: center;
    opacity: 0;
    right: 42%;
    bottom: 41%;
    background-color: rgba(213, 0, 255, 0.51);
}
