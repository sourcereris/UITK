.mail__screen {
    width: 100%;
    height: 100%;
}

.mail-content {
    flex-direction: column;
    display: flex;
    height: 81%;
    flex-grow: 1;
    position: absolute;
    width: 85%;
    padding-left: 0;
    padding-right: 0;
    padding-top: 0;
    padding-bottom: 0;
    left: 13%;
    background-image: url('project://database/Assets/UI/Textures/UI_atlas.psd?fileID=975008897348985379&guid=68de98d899585b7469e0fb40a0fcbc56&type=3#Window_bg_03');
    top: 17%;
}

.tab__container {
    position: absolute;
    width: 56%;
    left: 36%;
    flex-direction: row;
    justify-content: center;
    align-items: flex-end;
    height: 9%;
    top: -8.6%;
}

.mailbox__container {
    position: absolute;
    width: 100%;
    height: 100%;
    flex-direction: row;
    display: flex;
}

.inbox__container {
    padding-right: 0;
    width: 32%;
    height: 96%;
    margin-right: 2%;
    left: 0.5%;
    top: 3%;
}

.message__container {
    width: 67%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-image: none;
    left: 0;
}

.mail-no-messages {
    position: absolute;
    font-size: 80px;
    color: rgb(115, 82, 39);
    top: 37%;
    left: 0;
    opacity: 1;
    transition-duration: 0.25s;
    width: 100%;
    -unity-text-align: upper-center;
}
